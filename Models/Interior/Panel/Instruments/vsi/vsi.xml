<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>vsi.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Needle</object-name>
		<emission>
			<red>0.032</red>
			<green>0.035</green>
			<blue>0.035</blue>
			<factor>
				<expression>
					<sum>
						<product>
							<property>systems/electrical/outputs/instrument-lights</property>
							<value>0.5</value>
						</product>
						<product>
							<property>systems/electrical/outputs/instrument-lights</property>
							<value>0.5</value>
						</product>
					</sum>
				</expression>
			</factor>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
		<factor>0.09</factor>
		<min-deg>-180</min-deg>
		<max-deg>180</max-deg>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
