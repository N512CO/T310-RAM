<?xml version="1.0"?>

<PropertyList>

 <path>egt.ac</path>

 <animation>
  <type>material</type>
  <object-name>Face</object-name>
  <object-name>Needle</object-name>
		<emission>
			<red>0.032</red>
			<green>0.035</green>
			<blue>0.035</blue>
			<factor>
				<expression>
					<sum>
						<product>
							<property>systems/electrical/outputs/instrument-lights</property>
							<value>0.5</value>
						</product>
						<product>
							<property>systems/electrical/outputs/instrument-lights</property>
							<value>0.5</value>
						</product>
					</sum>
				</expression>
			</factor>
		</emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property>/engines/engine[1]/egt-degf</property>
  <factor>0.04</factor>
  <offset-deg>-45</offset-deg>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.012</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>

 </animation>

</PropertyList>


